<resources>

    <attr name="sectionLabelStyle" format="reference" />

    <!-- Section label attributes -->
    <declare-styleable name="SectionLabel">
        <attr name="android:text" />
        <attr name="expanded" format="boolean" />
    </declare-styleable>

    <!-- Padding for a view inside a dialog -->
    <attr name="dialogViewPadding" format="dimension" />

    <declare-styleable name="RatioImageView">
        <attr name="widthFactor" format="float" />
        <attr name="heightFactor" format="float" />
    </declare-styleable>

    <declare-styleable name="MenuItemWithIcon">
        <attr name="icon" format="reference" />
        <attr name="android:text" />
    </declare-styleable>

    <attr name="picPlaceholderBackground" format="color" />
    <attr name="picPlaceholderForegroundTint" format="color" />

</resources>
