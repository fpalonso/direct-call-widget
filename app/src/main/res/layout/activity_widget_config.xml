<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_default_padding">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/pictureContainer"
                android:layout_width="@dimen/activity_widget_config_photo_width"
                android:layout_height="@dimen/activity_widget_config_photo_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/activity_widget_config_photo_margin_h"
                android:layout_marginStart="@dimen/activity_widget_config_photo_margin_h">

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/default_background"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"/>

                <ImageView
                    android:id="@+id/defaultPicture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_default_picture"
                    android:clickable="false"/>
            </FrameLayout>

            <EditText
                android:id="@+id/displayName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/pictureContainer"
                android:layout_toStartOf="@id/pictureContainer"
                android:hint="@string/display_name_hint"/>

            <Spinner
                android:id="@+id/phoneNumberSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/displayName"
                android:layout_toLeftOf="@id/pictureContainer"
                android:layout_toStartOf="@id/pictureContainer"/>
        </RelativeLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/adContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="vertical"/>

</FrameLayout>