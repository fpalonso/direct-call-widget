<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blaxsoftware.directcallwidget"
    android:installLocation="internalOnly"
    android:versionCode="12"
    android:versionName="1.2.3">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <uses-feature
        android:name="android.hardware.CAMERA"
        android:required="false" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <receiver android:name="com.blaxsoftware.directcallwidget.appwidget.DirectCallWidgetProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="android.appwidget.action.APPWIDGET_DELETE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_2x2_info" />
        </receiver>

        <activity
            android:name="com.blaxsoftware.directcallwidget.WidgetConfigActivity"
            android:label="@string/activity_config_title">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".WidgetClickReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.blaxsoftware.directcallwidget.action.WIDGET_CLICK"/>
            </intent-filter>
        </receiver>

        <activity android:name=".CallActivity"
                  android:theme="@android:style/Theme.Translucent.NoTitleBar"/>
    </application>

</manifest>